        mc:Ignorable="d"
        AllowDrop="False"
        Title="{Binding ViewTitle}"
        Height="650" Width="1200">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <!-- horní toolbar --> 
            <RowDefinition Height="Auto" />
            <!-- horní master datagrid  -->
            <RowDefinition Height="*" />
            <!-- grid splitter -->
            <RowDefinition Height="Auto" />
            <!-- spodní datagrid s detaily -->
            <RowDefinition Height="*" />
            <!-- spodní status bar -->
            <RowDefinition Height="Auto" />
