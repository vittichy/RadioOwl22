<Application x:Class="RadioOwl.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:RadioOwl="clr-namespace:RadioOwl" >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                     <!-- nastartovani bootstrapperu pro caliburn.micro -->
                    <RadioOwl:Bootstrapper x:Key="bootstrapper" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <!-- 
    - nastavení startovacího okna net core WPF, trochu jinak než ve stare WPF
    - pri pouziti CalliburnMicro asi nebude potreba
    viz https://docs.microsoft.com/en-us/dotnet/desktop/wpf/windows/how-to-get-set-main-application-window?view=netdesktop-5.0 
    <Application.MainWindow>
        <Forms:MainView Visibility="Visible" />
    </Application.MainWindow>
    -->



    
</Application>
